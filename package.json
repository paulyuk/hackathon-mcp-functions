{
  "name": "hackathon-mcp-functions",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Remote MCP server on Azure Functions for hackathon submissions",
  "license": "MIT",
  "engines": { "node": ">=18" },
  "scripts": {
    "start": "func start",
    "build": "tsc",
    "dev": "tsc && func start",
    "clean": "rm -rf dist/",
    "test": "node tests/test-mcp-client.js",
    "test-agent": "cd src/agent && npm run test-client",
    "test-all": "npm run test && npm run test-agent",
    "validate": "node tests/validate.js",
    "agent-dev": "cd src/agent && npm run dev",
    "agent-build": "cd src/agent && npm run build",
    "agent-install": "cd src/agent && npm install",
    "chat": "cd src/agent && node --import tsx/esm ../../tests/interactive-chat.ts",
    "chat-demo": "cd src/agent && node --import tsx/esm ../../tests/test-agent-client.ts",
    "chat-message": "cd src/agent && node --import tsx/esm ../../tests/test-agent-client.ts --message",
    "chat-health": "cd src/agent && node --import tsx/esm ../../tests/test-agent-client.ts --health",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@azure/data-tables": "^13.2.2",
    "express": "^4.21.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.7.2"
  }
}
